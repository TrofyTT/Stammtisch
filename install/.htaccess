# .htaccess für /install/ Verzeichnis
# ALFAHOSTING-KOMPATIBEL (PHP-FPM)

# Zeichenkodierung
AddDefaultCharset UTF-8

# Verzeichnis-Listing deaktivieren
Options -Indexes

# DirectoryIndex
DirectoryIndex install.php

# Sicherheit: Nur install.php ist zugänglich
<FilesMatch "^(database_complete\.sql|\.user\.ini|README\.md|ALFAHOSTING_ANLEITUNG\.md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Erlaube Zugriff auf install.php
<Files "install.php">
    Order allow,deny
    Allow from all
</Files>
