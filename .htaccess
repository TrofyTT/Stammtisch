# .htaccess für Stammtisch App Root-Verzeichnis
# ALFAHOSTING-KOMPATIBEL (PHP-FPM)

# WICHTIG: PHP-Einstellungen für Alfahosting gehören in .user.ini (nicht hier!)
# Die php_value und php_flag Direktiven funktionieren NICHT mit PHP-FPM

# Zeichenkodierung
AddDefaultCharset UTF-8

# Verzeichnis-Listing deaktivieren
Options -Indexes

# DirectoryIndex
DirectoryIndex index.php index.html

# Sicherheit: Verstecke sensible Dateien
<FilesMatch "^(config\.php|config\.local\.php|\.git.*|\.env|composer\.json|composer\.lock|package\.json)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Erlaube Zugriff auf install.php (für Installation)
<Files "install.php">
    Order allow,deny
    Allow from all
</Files>

# Rewrite-Engine (falls mod_rewrite verfügbar)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
</IfModule>
